                <MenuItem Header="Gestiune profesori"/>
                <MenuItem Header="Gestiune materii"/>
                <MenuItem Header="Gestiune clase"/>
                <MenuItem Header="Gestiune elevi"/>
            </MenuItem>
            <MenuItem Header="Profesor">
